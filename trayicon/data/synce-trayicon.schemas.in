<gconfschemafile>
  <schemalist>

    <schema>
      <key>/schemas/apps/synce/trayicon/start_vdccm</key>
      <applyto>/apps/synce/trayicon/start_vdccm</applyto>
      <owner>synce-trayicon</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>If we should start and stop the vdccm daemon</short>
        <long>If we should start and stop the vdccm daemon. Only applies when using vdccm for communications.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/synce/trayicon/enable_vdccm</key>
      <applyto>/apps/synce/trayicon/enable_vdccm</applyto>
      <owner>synce-trayicon</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Enable use of Vdccm</short>
        <long>Enable use of the legacy Vdccm communications daemon.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/synce/trayicon/dccm</key>
      <applyto>/apps/synce/trayicon/dccm</applyto>
      <owner>synce-trayicon</owner>
      <type>string</type>
      <default>o</default>
      <locale name="C">
        <short>** obsolete ** The dccm implementation used</short>
        <long>** obsolete ** The dccm implementation used, 'o' for odccm (the default), 'h' for synce-hal, 'v' for vdccm.</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/synce/trayicon/show_disconnected</key>
      <applyto>/apps/synce/trayicon/show_disconnected</applyto>
      <owner>synce-trayicon</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Show icon when disconnected</short>
        <long>Whether the icon will be shown when the device is not connected (true) or only when it is connected (false). The latter is the default.</long>
      </locale>
    </schema>

  </schemalist>
</gconfschemafile>
